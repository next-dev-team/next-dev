{
  "name": "{{kebabCase pluginSlug}}",
  "version": "{{version}}",
  "description": "Hello Tron Mini starter plugin",
  "author": "Plugin Developer",
  "license": "MIT",
  "main": "plugin.js",
  "tron-plugin": {
    "name": "{{pluginName}}",
    "version": "{{version}}",
    "description": "Hello Tron Mini starter plugin",
    "author": "Plugin Developer",
    "license": "MIT",
    "type": "ui",
    "permissions": ["storage"],
    "ui": "index.html",
    "icon": "todo-icon.svg",
    "development": {
      "hotReload": true,
      "devTools": true,
      "fileWatcher": true
    },
    "window": {
      "width": 500,
      "height": 600,
      "minWidth": 400,
      "minHeight": 500,
      "maxWidth": 700,
      "maxHeight": 800,
      "resizable": true
    }
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "@vitejs/plugin-react": "^4.7.0",
    "vite": "^5.4.20",
    "shx": "^0.3.4"
  },
  "scripts": {
    "cp-resources": "shx cp package.json dist/ && shx cp src/plugin.js dist/plugin.js",
    "dev": "vite --port {{port}}",
    "build": "vite build && npm run cp-resources",
    "preview": "vite preview --port {{previewPort}}"
  }
}