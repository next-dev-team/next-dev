{
  "name": "@rnr/monorepo",
  "private": true,
  "scripts": {
    "gen:api": "turbo gen:api",
    "dev": "turbo dev",
    "dev:docs": "turbo dev --filter=@rnr/docs",
    "dev:web": "turbo dev --filter=@rnr/tron-core-web",
    "dev:electron": "pnpm --filter @rnr/electron dev",
    "dev:showcase": "cd apps/showcase && pnpm start",
    "dev:showcase:android": "turbo dev:android --filter=@rnr/showcase --concurrency 32",
    "dev:showcase:web": "turbo dev:web --filter=@rnr/showcase --concurrency 32",
    "dev:tron": "pnpm --filter @rnr/tron-core run dev",
    "lint": "turbo lint",
    "lint:fix": "turbo lint -- --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "turbo test",
    "build": "turbo build",
    "build:showcase": "turbo build --filter=@rnr/showcase",
    "build:docs": "turbo build --filter=@rnr/docs",
    "clean": "turbo clean && rm -rf .turbo node_modules",
    "gen:list": "turbo gen list --config turbo/generators/config.ts",
    "gen:tron-mini": "turbo gen run tron-mini --config turbo/generators/config.ts"
  },
  "devDependencies": {
    "@kubb/cli": "^4.5.9",
    "@kubb/core": "^4.5.9",
    "@kubb/plugin-client": "^4.5.9",
    "@kubb/plugin-oas": "^4.5.9",
    "@kubb/plugin-react-query": "^4.5.9",
    "@kubb/plugin-ts": "^4.5.9",
    "@kubb/react": "^4.3.1",
    "@kubb/react-fabric": "^0.4.0",
    "unplugin-kubb": "^3.2.0",
    "@rnr/configs": "workspace:*",
    "@turbo/gen": "^2.1.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/*",
        "expo-modules-*",
        "typescript"
      ]
    }
  },
  "engines": {
    "node": ">=20.11.0"
  },
  "packageManager": "pnpm@10.22.0",
  "resolutions": {
    "lightningcss": "1.27.0"
  }
}
